# Development Environment Configuration
NODE_ENV=development
PORT=5002

# Database Configuration (MySQL with correct port - no password)
DATABASE_URL="mysql://root@localhost:3307/ethioai_tourism"

# Redis Configuration (optional in development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=development-jwt-secret-key-for-testing-only
JWT_ACCESS_SECRET=development-access-secret
JWT_REFRESH_SECRET=development-refresh-secret
